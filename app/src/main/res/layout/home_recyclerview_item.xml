<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_marginEnd="@dimen/margin_11dp"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_item_image_view"
        android:layout_width="@dimen/sze_100dp"
        android:layout_height="@dimen/size_100dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        app:layout_constraintBottom_toTopOf="@id/home_item_name_text_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/home_item_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jj_fashionista_limited"
            android:textSize="@dimen/text_size_10sp"
            android:layout_marginTop="@dimen/margin_6dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/home_item_image_view"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/home_location_item_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/egbeda_lagos"
            android:textSize="@dimen/text_size_9sp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/home_item_name_text_view"
            app:layout_constraintStart_toStartOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>