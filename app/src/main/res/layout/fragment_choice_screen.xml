<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/choiceScreen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#0066F5"
    android:orientation="vertical"
    tools:context=".presentation.ui.ChoiceLoginFragment">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="112dp"
        android:layout_marginTop="134.22dp"
        android:src="@drawable/groups" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up_with_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="79dp"
        android:backgroundTint="@color/white"
        android:drawableStart="@drawable/google"
        android:paddingVertical="10dp"
        android:text="@string/sign_up_with_google"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/sign_up_with_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="79dp"
        android:backgroundTint="#0066F5"
        android:paddingVertical="10dp"
        android:text="@string/sign_up_with_email"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:strokeColor="@color/white"
        app:strokeWidth="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/have_account_Login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="110dp"
            android:layout_marginTop="27dp"
            android:layout_marginEnd="101dp"
            android:text="@string/have_an_account"
            android:textColor="#8DFFFFFF"
            android:textSize="12sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/login"
            android:layout_marginStart="-98dp"
            android:textStyle="bold"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:layout_marginTop="27dp"
            />
<!--        <TextView-->
<!--            android:id="@+id/Login"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginStart="110dp"-->
<!--            android:layout_marginTop="27dp"-->
<!--            android:text="@string/login"-->
<!--            android:textColor="@color/white"-->
<!--            android:textSize="12sp"-->
<!--            android:textStyle="bold" />-->
    </LinearLayout>


</LinearLayout>