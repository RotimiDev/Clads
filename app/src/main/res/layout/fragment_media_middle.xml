<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.ui.MediaCaptionFragment">


    <ImageView
        android:id="@+id/media_caption_fragment_Image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/rectangle_25"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/media_caption_fragment_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_28dp"
        android:layout_marginStart="@dimen/margin_5dp"
        android:layout_marginEnd="@dimen/margin_5dp"
        android:paddingStart="@dimen/padding_10dp"
        android:paddingEnd="@dimen/padding_10dp"
        android:paddingVertical="@dimen/padding_10dp"
        android:background="@drawable/edit_text_background"
        android:hint="@string/please_enter_caption"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf= "@id/media_caption_fragment_button" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/media_caption_fragment_button"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_55dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:backgroundTint="@color/app_color_blue"
        app:cornerRadius="@dimen/radius_10dp"
        android:text="@string/add_caption"
        app:layout_constraintEnd_toEndOf="@+id/media_caption_fragment_editText"
        app:layout_constraintStart_toStartOf="@+id/media_caption_fragment_editText"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>