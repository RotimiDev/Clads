<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBarActivity"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:navigationIcon="@drawable/ic_baseline_arrow_back_24">

            <TextView
                android:id="@+id/artisan_pro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_extralight"
                android:text="@string/artisan_profile"
                android:textColor="@color/navy_blue"
                android:textSize="14sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/shapeableImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_32dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBarActivity"
            app:shapeAppearanceOverlay="@style/ImageStyle_Circle" />

        <TextView
            android:id="@+id/jj_fashioni_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_12dp"
            android:text="@string/jj_fashionista_limited"
            android:textColor="@color/dark_black"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shapeableImageView" />

        <TextView
            android:id="@+id/akowonjo_ro_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_24_akowoje_road_egbeda"
            android:textColor="@color/menu_text_color"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/jj_fashioni_text_view" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_32dp"
            android:layout_marginEnd="@dimen/margin_32dp"
            android:layout_marginTop="@dimen/margin_32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/akowonjo_ro_text_view">

            <TextView
                android:id="@+id/amet_minim_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="3"
                android:text="@string/amet_minim_mollit_non_deserunt_ullamco_est_sit_aliqua_dolor_do_amet_sint_velit_officia_consequat_duis_enim_enim_velit_mollit"
                android:textAlignment="center"
                android:layout_marginTop="@dimen/margin_20dp"
                android:textColor="@color/menu_text_color"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/chat_button"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32dp"
                android:background="@drawable/button_round"
                android:drawableStart="@drawable/ic_vector"
                android:paddingHorizontal="@dimen/margin_32dp"
                android:paddingVertical="@dimen/padding_12dp"
                android:text="@string/chat"
                android:textAllCaps="false"
                android:textColor="@color/stroke_color"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/amet_minim_textView" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/call_button"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32dp"
                android:background="@drawable/call_background"
                android:drawableStart="@drawable/ic_call"
                android:paddingHorizontal="@dimen/margin_32dp"
                android:paddingVertical="@dimen/padding_12dp"
                android:text="@string/call"
                android:textAllCaps="false"
                android:textColor="@color/green_border"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/amet_minim_textView" />


            <TextView
                android:id="@+id/rating_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_14dp"
                android:layout_marginTop="@dimen/margin_32dp"
                android:text="@string/rating"
                android:textColor="@color/menu_text_color"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/chat_button" />

            <TextView
                android:id="@+id/number_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_14dp"
                android:text="@string/_4_0"
                android:textColor="@color/navy_blue"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/rating_text_view" />

            <RatingBar
                android:id="@+id/rating_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="false"
                android:numStars="4"
                android:progressTint="@color/rating_color"
                android:rating="2.5"
                android:scaleX=".5"
                android:scaleY=".5"
                android:stepSize="0.5"
                android:theme="@style/Widget.AppCompat.RatingBar"
                android:transformPivotX="@dimen/pivot_0dp"
                android:transformPivotY="@dimen/pivot_0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number_id" />

            <CheckBox
                android:id="@+id/favorite_check_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:button="@drawable/ic_baseline_favorite_24"
                app:layout_constraintBottom_toBottomOf="@+id/rating_start"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/add_favourite_test_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_12dp"
                android:text="Add Favourites"
                android:textColor="@color/navy_blue"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/favorite_check_box" />


            <TextView
                android:id="@+id/see_review_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/see_reviews"
                android:textColor="@color/stroke_color"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/add_favourite_test_view"
                app:layout_constraintStart_toStartOf="parent" />


            <Button
                android:id="@+id/go_to_gallery_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_32dp"
                android:backgroundTint="@color/stroke_color"
                android:paddingVertical="@dimen/padding_15dp"
                android:text="@string/go_to_gallery"
                android:textAllCaps="false"
                android:textSize="12sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/see_review_text_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.core.widget.NestedScrollView>