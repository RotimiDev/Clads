<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.DashboardActivity">

            <include
                android:id="@+id/toolbar_include"
                layout="@layout/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fragmentContainerView"
                android:name="androidx.navigation.fragment.NavHostFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:defaultNavHost="true"
                app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/toolbar_include"
                app:navGraph="@navigation/dashboard_navigation" />

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:menu="@menu/bottom_nav_menu" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/mainActivity_navView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity = "start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

                        <ImageView
                            android:id="@+id/nav_drawer_cancel_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_20dp"
                            android:layout_marginEnd="@dimen/margin_20dp"
                            android:src="@drawable/ic_union"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/nav_drawer_avatar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/nav_drawer_avatar_marginTop"
                            android:src="@drawable/ic_avatar"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/nav_drawer_editProfile_name_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_14dp"
                            android:text="@string/ijeoma_ibukun_babangida"
                            android:textColor="@color/deep_sky_blue"
                            android:textSize="@dimen/size_12sp"
                            android:textStyle="bold"
                            app:layout_constraintEnd_toEndOf="@+id/nav_drawer_avatar"
                            app:layout_constraintStart_toStartOf="@+id/nav_drawer_avatar"
                            app:layout_constraintTop_toBottomOf="@+id/nav_drawer_avatar" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/nav_drawer_editProfile_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_12dp"
                            android:backgroundTint="@color/deep_sky_blue"
                            android:paddingStart="@dimen/padding_13dp"
                            android:paddingEnd="@dimen/padding_13dp"
                            android:text="@string/edit_profile"
                            android:textSize="@dimen/text_size_11sp"
                            android:textStyle="bold"
                            app:cornerRadius="@dimen/nav_drawer_editProfile_button_radius"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nav_drawer_editProfile_name_textView" />

                        <ImageView
                            android:id="@+id/nav_drawer_editProfile_topLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_30dp"
                            android:src="@drawable/ic_line"
                            app:layout_constraintEnd_toEndOf="@+id/nav_drawer_editProfile_button"
                            app:layout_constraintStart_toStartOf="@+id/nav_drawer_editProfile_button"
                            app:layout_constraintTop_toBottomOf="@+id/nav_drawer_editProfile_button" />

                        <ImageView
                            android:id="@+id/nav_drawer_editProfile_logOut_icon"
                            android:layout_width="@dimen/width_15dp"
                            android:layout_height="@dimen/width_15dp"
                            android:layout_marginStart="@dimen/margin_20dp"
                            android:layout_marginTop="@dimen/margin_20dp"
                            android:src="@drawable/ic_power"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/nav_drawer_editProfile_topLine" />

                        <TextView
                            android:id="@+id/nav_drawer_editProfile_LogOut_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_25dp"
                            android:text="@string/logout"
                            app:layout_constraintBottom_toBottomOf="@+id/nav_drawer_editProfile_logOut_icon"
                            app:layout_constraintStart_toEndOf="@+id/nav_drawer_editProfile_logOut_icon"
                            app:layout_constraintTop_toTopOf="@+id/nav_drawer_editProfile_logOut_icon" />

                        <ImageView
                            android:id="@+id/nav_drawer_editProfile_BottomLine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_line"
                            android:layout_marginTop="@dimen/margin_20dp"
                            app:layout_constraintEnd_toEndOf="@+id/nav_drawer_editProfile_topLine"
                            app:layout_constraintStart_toStartOf="@+id/nav_drawer_editProfile_topLine"
                            app:layout_constraintTop_toBottomOf="@+id/nav_drawer_editProfile_LogOut_textView" />

                        <ImageView
                            android:id="@+id/nav_drawer_editProfile_nextIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_shape"
                            android:layout_marginEnd="@dimen/margin_20dp"
                            app:layout_constraintTop_toTopOf="@id/nav_drawer_editProfile_LogOut_textView"
                            app:layout_constraintBottom_toBottomOf="@id/nav_drawer_editProfile_LogOut_textView"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

                        <TextView
                            android:id="@+id/nav_drawer_version_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/version_1_0"
                            android:layout_marginEnd="@dimen/margin_20dp"
                            android:layout_marginBottom="@dimen/margin_20dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>