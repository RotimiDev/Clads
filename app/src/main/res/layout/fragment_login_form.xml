<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_sky_blue"
    android:padding="@dimen/size_13_dp"
    tools:context=".presentation.ui.LoginFormFragment">


    <TextView
        android:id="@+id/tvWelcomeBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"
        android:text="@string/welcome_back"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18_sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7" />

    <TextView
        android:id="@+id/tvLoginToContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_9_dp"
        android:fontFamily="@font/poppins"
        android:text="@string/login_to_continue"
        android:textColor="@color/white"
        android:textSize="@dimen/text_14_sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWelcomeBack" />


    <androidx.cardview.widget.CardView
        android:id="@+id/signUpGoogle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_29_dp"
        android:background="@color/white"
        app:cardCornerRadius="@dimen/size_8_dp"
        app:layout_constraintTop_toBottomOf="@+id/tvLoginToContinue">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/size_13_dp"
                android:layout_marginStart="@dimen/size_89_dp"
                android:src="@drawable/google_logo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_9_dp"
                android:fontFamily="@font/poppins"
                android:text="@string/signup_with_google"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14_sp"
                app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="@+id/imageView4" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUsePhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_9_dp"
        android:text="@string/use_phone"
        android:textColor="@color/gray_6"
        app:layout_constraintBottom_toBottomOf="@+id/etEnterEmail"
        app:layout_constraintEnd_toEndOf="@+id/etEnterEmail" />


    <EditText
        android:id="@+id/etEnterEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_44_dp"
        android:backgroundTint="@color/gray_6"
        android:fontFamily="@font/roboto"
        android:hint="@string/email_address"
        android:textColor="@color/gray_6"
        android:textColorHint="@color/gray_6"
        app:layout_constraintTop_toBottomOf="@+id/signUpGoogle"
        app:passwordToggleEnabled="true" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayoutPassword"
        android:layout_width="@dimen/size_0_dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_22_dp"
        app:hintEnabled="false"
        app:boxStrokeColor="@color/gray_6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEnterEmail"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/gray_6">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:textColor="@color/gray_6"
            android:background="@color/deep_sky_blue"
            android:inputType="textPassword"
            android:textColorHint="@color/gray_6"
            app:layout_constraintTop_toBottomOf="@+id/etEnterEmail" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.090287276" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"

        android:layout_marginTop="@dimen/size_29_dp"
        android:fontFamily="@font/poppins"
        android:text="@string/login"
        android:textAllCaps="false"
        android:textColor="@color/deep_sky_blue"
        android:textSize="@dimen/text_16_sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPassword"
        tools:layout_editor_absoluteX="13dp" />

    <TextView
        android:id="@+id/tvNewUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_32_dp"
        android:fontFamily="@font/poppins"
        android:text="@string/new_use"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/guideline9"
        app:layout_constraintTop_toBottomOf="@+id/btnLogin" />

    <TextView
        android:id="@+id/tvSignUpFree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/size_9_dp"
        android:fontFamily="@font/poppins"
        android:text="@string/signup_for_free"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvNewUser"
        app:layout_constraintStart_toEndOf="@+id/tvNewUser"
        app:layout_constraintTop_toTopOf="@+id/tvNewUser" />

    <TextView
        android:id="@+id/tvForgotPasswordSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_22_dp"
        android:fontFamily="@font/poppins"
        android:text="@string/forgot_password"
        android:textColor="@color/gray"
        app:layout_constraintStart_toStartOf="@+id/guideline8"
        app:layout_constraintTop_toBottomOf="@+id/tvNewUser" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.29440388" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20681265" />


</androidx.constraintlayout.widget.ConstraintLayout>